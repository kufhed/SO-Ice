<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#955aa4"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/txt_developer" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/martin"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#955aa4"
                android:gravity="center"
                android:text="MARTIN LUTER" />

            <TextView
                android:id="@+id/putri"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#955aa4"
                android:gravity="center"
                android:text="PUTRI" />

            <TextView
                android:id="@+id/kukuh"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#955aa4"
                android:gravity="center"
                android:text="KUKUH FREHADTOMO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#955aa4"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nama_dev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="OneIT Team"
                    android:textColor="#f2f2f2" />

                <TextView
                    android:id="@+id/detail_dev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="Is a final project team aimed to make changes to the lives of the people who started from the problems of minorities through achievement in the creation of applications that can solve existing problems"
                    android:textColor="#f2f2f2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>